extends layout

block content
    p
    .modal-dialog
        .modal-content
            // Modal Header
            .modal-header(style="background-color:#fbfbfb;")
                center
                    h2#myModalLabel.modal-title
                        | Login
                br
                br
                div.container.col-lg-12
                    a(href="https://ontocommons.eu/")
                        img.col-lg-4(src="https://ontocommons.eu/themes/paranoid/logo.png",
                            alt="Ontocommons logo")
                    a(href="https://www.enit.fr/fr/index.html")
                        img.col-lg-4(src="https://upload.wikimedia.org/wikipedia/fr/thumb/d/da/Logo_enit_2017.png/800px-Logo_enit_2017.png?20190210090909",
                            alt="Enit logo")
                    a(href="https://totalenergies.com/")
                        img.col-lg-4(src="https://raw.githubusercontent.com/rasmi-aw/souslesensVocables/master/public/icons/total.png",
                            alt="TotalEnergies logo")
            // Modal Body
            .modal-body
                form(role='form' method='POST' action='/auth/login')
                    div.form-group
                        label(for='username') Username:
                        input#username.form-control(type='text', placeholder='username' name='username', value="")
                    div.form-group
                        label(for='password') Password:
                        input#password.form-control(type='password', placeholder='password' name='password', value="")
                    center
                        button.btn.btn-primary(type="submit", name="asdf", style="min-width:100%;" ) Submit
        if hasMessages
            br
            each msg in messages
                div.alert.alert-danger(role="alert")= msg





